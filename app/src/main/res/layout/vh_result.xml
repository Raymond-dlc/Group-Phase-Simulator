<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1.1">

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data" />

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="@string/placeholder_team"
        android:textAppearance="@style/table_data" />

    <TextView
        android:id="@+id/tv_played"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_win"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data" />

    <TextView
        android:id="@+id/tv_draw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data" />

    <TextView
        android:id="@+id/tv_loss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data" />

    <TextView
        android:id="@+id/tv_for"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data" />

    <TextView
        android:id="@+id/tv_against"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data" />

    <TextView
        android:id="@+id/tv_net_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data" />

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/placeholder_x"
        android:textAppearance="@style/table_data"
        android:textStyle="bold" />

</LinearLayout>